@model Matechco.Models.vu_users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .login-form {
        width: 340px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

@using (Html.BeginForm(actionName: "Index", controllerName: "Account"))
{
    @Html.AntiForgeryToken()


    <div class="login-form">
        <div>
            <img src="~/Content/images/logo.jpeg" style="background-color:white; position: relative;left: 15px;width: 300px;" />

            <hr />
            <div style="background-color: #191a4a; padding: 20px;" class="login-manjan">
                <h2 class="text-center" style="color:white;">Login</h2>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control", @placeholder = "Username" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.password, new { @class = "form-control", @placeholder = "Username",@type="password" })
                </div>
                <div class="form-group">
                    <button id="btnlogin" type="submit" class="btn btn-primary btn-block"><p style="font-size: 25px; margin:auto; font-weight: bold; color: #191a4a; text-align: center">Log in</p></button>
                </div>
                
            </div>
        </div>
        @{

            if (TempData["ResultLogin"] != null)
            {
                <label class="tab-danger">@TempData["ResultLogin"]</label>
            }

        }


    </div>
            }

